# Database Configuration
# PostgreSQL database URL for Prisma
DATABASE_URL="postgresql://username:password@localhost:5432/powerdev_db"

# Direct database URL for Prisma (used for migrations and direct connections)
DIRECT_URL="postgresql://username:password@localhost:5432/powerdev_db"

# API Configuration
# Secret key for API authentication (used in middleware for protecting API routes)
API_SECRET_KEY="your-secret-api-key-here"

# Site Configuration
# Base URL of your application (used for sitemap generation)
SITE_URL="https://your-domain.com"

# Seeding Configuration
# Secret key for password encryption during database seeding
SEED_PASSWORD_SECRET="your-seed-password-secret"

# Cloudinary Configuration (Optional - for image uploads)
# Cloud name from your Cloudinary account
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"

# Cloudinary API key (keep this secret)
CLOUDINARY_API_KEY="your-cloudinary-api-key"

# Cloudinary API secret (keep this secret)
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Environment
NODE_ENV="development"